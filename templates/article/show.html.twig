{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>ImageUrl</th>
                <td><img src="{{ article.imageUrl }}"></td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ article.slug }}</td>
            </tr>
        </tbody>
    </table>


   <div class="button-container">
    <a href="{{ path('app_article_index') }}" class="ui-btn space-below">
    <span>Back To List</span>
    </a>
    </div>

<div class="button-container">
    <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="ui-btn space-below">
        <span>Edit</span>
    </a>
</div>


    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
